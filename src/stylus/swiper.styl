{ns}swiper
  width: 100%
  height 200px
  position relative
  overflow hidden
  .swiper-wrapper
    
    width 100%
    height 100%
    display: flex 
    .swiper-item
      .index
        
        font-size: 50px
        color: rgba(0,0,0,.9)
      // &:nth-child(1)
      //   background-color red
      // &:nth-child(2)
      //   background-color yellow
      // &:nth-child(3)
      //   background-color blue
  .direction-nav
    position absolute
    width 100%
    z-index: 10
    display: flex
    justify-content: space-between
    top: 50%
    transform: translateY(-50%)
    .prev
      margin-left: 10px
      display block
      border-top: 1px solid #666;
      border-right: 1px solid #666;
      width: 30px;
      height: 30px;
      transform: rotate(-135deg)
    .next
      margin-right: 10px
      display block
      border-top: 1px solid #666;
      border-right: 1px solid #666;
      width: 30px;
      height: 30px;
      transform: rotate(45deg)
  .control-dots
    position absolute
    z-index 10
    display: flex
    left 50%
    bottom: 20px
    transform: translateX(-50%)
    a
      width 10px
      height 10px
      border-radius: 50%
      margin 0 5px
      background-color #fff
    .active
      background-color red
      